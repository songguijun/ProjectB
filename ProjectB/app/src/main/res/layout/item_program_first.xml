<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_program_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V榜特别企划"
            android:layout_margin="8dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_program_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasdasdadsasdasdasd"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_background_first"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="180dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_title_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
           android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="asdasdasdasdasd"/>
        <TextView
            android:id="@+id/tv_count_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:text="asdasdasdasdads"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放数量:"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_num_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="saasdadsasd"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>